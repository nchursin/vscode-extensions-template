{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"rootDir": ".",
		"strict": true,
		"baseUrl": "./",
		"paths": {
            "@src/*": ["src/*"],
            "@manifest": ["package.json"]
        },
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
